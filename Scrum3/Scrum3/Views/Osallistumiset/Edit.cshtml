@model Scrum3.Model.Osallistumiset

@{
    ViewBag.Title = "Edit";
}

<h2>Muokkaa tietoja</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>Osallistumiset</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.OsallistumisetID)

        <div class="form-group">
            @Html.LabelFor(model => model.KurssitoteutusID, "Kurssitoteutus", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("KurssitoteutusID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.KurssitoteutusID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OppilasID, "Oppilas", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("OppilasID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.OppilasID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tallenna muutos" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Takaisin", "Index")
</div>
