@model IEnumerable<Scrum3.ViewModels.OsallistumisetVM>

@{
    ViewBag.Title = "Index";
}

<h2>Osallistumiset</h2>

<p>
    @Html.ActionLink("Lisää läsnäolo kursille", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Kurssi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paivamaara)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sukunimi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Kurssi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Paivamaara, "{0:d}")
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Sukunimi)
    </td>
    <td>
        @Html.ActionLink("Muokkaa", "Edit", new { id = item.OsallistumisetID }) |
        @*@Html.ActionLink("Osallistumiset", "Details", new { id = item.OsallistumisetID }) |*@
        @Html.ActionLink("Poista", "Delete", new { id = item.OsallistumisetID })
    </td>
</tr>
}

</table>
